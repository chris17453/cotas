; Phase 2A Test Program â€” exercises FOR, SELECT, INC/DEC, math/string/date functions
;
define total type N size 10
define i type I size 5
define name type A size 20
define result type A size 40

; --- FOR loop test ---
total = 0
for(i;1;10;1)
    total = total + i
next
say 'Sum 1..10 = ' + str(total) at 1,1

; --- SELECT test ---
name = 'TAS'
select name
case 'COBOL'
    say 'Language: COBOL' at 3,1
case 'TAS'
    say 'Language: TAS Professional' at 3,1
otherwise
    say 'Language: Unknown' at 3,1
endc

; --- INC/DEC test ---
define counter type I size 5
counter = 100
inc counter
inc counter
inc counter
dec counter
say 'Counter: ' + str(counter) at 5,1

; --- Math functions ---
say 'SQRT(144) = ' + str(sqrt(144)) at 7,1
say 'ROUND(3.14159, 2) = ' + str(round(3.14159, 2)) at 8,1
say 'ABS(-99) = ' + str(abs(-99)) at 9,1

; --- String functions ---
say 'LOC = ' + str(loc('Hello World', 'World')) at 11,1
say 'SEG = ' + seg('ABCDEFGH', 3, 4) at 12,1
say 'UP = ' + up('hello') at 13,1
say 'LOW = ' + low('HELLO') at 14,1

; --- Date function ---
say 'Today: ' + date() at 16,1
say 'Time: ' + time() at 17,1

; --- IIF ---
i = 42
say 'IIF test: ' + iif(i > 10, 'big', 'small') at 19,1

; --- Conversion ---
say 'CINT(7.9) = ' + str(cint(7.9)) at 21,1
say 'LTOC(.T.) = ' + ltoc(.t.) at 22,1

; --- Stub commands should not crash ---
bell
trace
norstrt

say 'Phase 2A tests complete!' at 24,1
quit
